@model Final_Project.Models.marksHelper
@{
    List<string> recents = (List<string>)Session["systemNames"];
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Elisyam - Login</title>
    <meta name="description" content="Elisyam is a Web App and Admin Dashboard Template built with Bootstrap 4">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Google Fonts -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Montserrat:400,500,600,700", "Noto+Sans:400,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/Content/assets/img/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/assets/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/assets/img/favicon-16x16.png">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="~/Content/assets/vendors/css/base/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets/vendors/css/base/elisyam-1.2.min.css">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body class="bg-fixed-07">
    <div>
        @Html.Partial("_headerCreator")
    </div>
    <!-- Begin Preloader -->
    <div id="preloader">
        <div class="canvas">
            <img src="~/Content/assets/img/logo.png" alt="logo" class="loader-logo">
            <div class="spinner"></div>
        </div>
    </div>
    <!-- End Preloader -->
    <!-- Begin Container -->

    <div class="container-fluid">
        <div class="row flex-row">
            <div class="col-12">
                <!-- Form -->
                @using (Html.BeginForm("EditMS", "Creator", FormMethod.Get, new { enctype = "multipart/form-data" }))

                {
                    @Html.AntiForgeryToken()
                    <div class="widget-header bordered no-actions d-flex align-items-center justify-content-md-center">
                        <h4>Recent Projects</h4>
                    </div>
                    <div class="widget-body">
                        <!-- Begin Suggestion -->
                        <div class="widget has-shadow">
                            <div class="widget-body p-3">
                                <ul class="pop-groups list-group w-100">
                                    <!-- 01 -->

                                    @Html.DropDownListFor(model => model.Choose, new SelectList(recents), new { @class = "form-control", aria_describedby = "dropdownMenu2" })

                                    @*if (recents.Count == 0)
                {
                    <li class="list-group-item">
                        <div class="media">
                            <div class="media-left align-self-center mr-3">
                                <img class="rounded-circle" src="~/Content/assets/img/avatar/avatar-07.jpg" alt="..." style="width: 50px;">
                            </div>
                            <div class="media-body align-self-center">
                                <h5 class="m-0">No Recent Projects</h5>
                            </div>

                        </div>
                    </li>
                }*@
                                    <!-- End 01 -->

                                </ul>
                            </div>
                            <div class="sign-btn text-center ">
                                <input type="submit" value="Update" class="btn btn-lg btn-gradient-03" />
                            </div>
                        </div>
                        <!-- End Suggestion -->
                    </div>
                    
                }

            </div>
            <!-- End Form -->



        </div>
        <!-- End Row -->
    </div>

    <!-- End Container -->
    <div class="row justify-content-md-center">
        <div class="col-xl-2">
            <!-- Block Buttons -->


            <div class="col-xl-6">
                <p class="btn btn-primary btn-lg mr-1 mb-2 btn btn-light"> @Html.ActionLink("Create New Management System", "DefineMS", "Creator")</p>
            </div>


            <!-- End Block Buttons -->
        </div>
    </div>
    <!-- End Container -->
    <!-- Begin Vendor Js -->
    @{Html.EnableClientValidation(true);}
    @{Html.EnableUnobtrusiveJavaScript(true);}
    <script src="~/Content/assets/vendors/js/base/jquery.min.js"></script>
    <script src="~/Content/assets/vendors/js/base/core.min.js"></script>

    <script src="~/Content/assets/vendors/js/nicescroll/nicescroll.min.js"></script>
    <script src="~/Content/assets/vendors/js/calendar/moment.min.js"></script>
    <script src="~/Content/assets/vendors/js/calendar/fullcalendar.min.js"></script>
    <script src="~/Content/assets/vendors/js/app/app.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <!-- End Vendor Js -->
    <!-- Begin Page Vendor Js -->
    <script src="~/Content/assets/vendors/js/app/app.min.js"></script>
    <!-- End Page Vendor Js -->
</body>
</html>
