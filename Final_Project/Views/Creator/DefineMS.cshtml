@model Final_Project.Models.m
@{
    Layout = null;
   
 }

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Elisyam - Confirm Email</title>
    <meta name="description" content="Elisyam is a Web App and Admin Dashboard Template built with Bootstrap 4">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Google Fonts -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
    <script>
        WebFont.load({
                google: { "families": ["Montserrat:400,500,600,700", "Noto+Sans:400,700"] },
            active: function () {
            sessionStorage.fonts = true;
        }
    });
    </script>
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/Content/assets/img/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/assets/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/assets/img/favicon-16x16.png">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="~/Content/assets/vendors/css/base/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets/vendors/css/base/elisyam-1.2.min.css">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body class="bg-fixed-07">
    <!-- Begin Preloader -->
    <div id="preloader">
        <div class="canvas">
            <img src="~/Content/assets/img/logo.png" alt="logo" class="loader-logo">
            <div class="spinner"></div>
        </div>
    </div>

    <div class="container-fluid h-100 overflow-y">
        <div class="row flex-row h-100">
            <div class="col-12 my-auto">
                <!-- Form -->

                <div class="widget has-shadow mx-auto" style="width: 900px;">
                    <div class="widget-header bordered no-actions d-flex align-items-center justify-content-md-center">
                        <h4>Please provide us few details about your management system.</h4>
                    </div>
                    <div class="widget-body ">
                @using (Html.BeginForm("DefineMS", "Creator", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                           @Html.ValidationSummary(true)
                        <form class="form-horizontal ">
                            <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                <label class="col-lg-2 form-control-label">Institute Name</label>
                                <div class="col-lg-8">
                                   
                                    <div>
                                        @Html.TextBoxFor(model => model.MS_InstName, new { @class = "form-control" , @required="required"})
                                    </div>
                                    @Html.ValidationMessageFor(model => model.MS_InstName)
                                </div>
                            </div>
                            
                            <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                <label class="col-lg-2 form-control-label">Address</label>
                                <div class="col-lg-8"><div>
                                     @Html.TextBoxFor(model => model.MS_InstAddress, new { @class = "form-control",@required="required" })
                                </div>
                                        @Html.ValidationMessageFor(model => model.MS_InstAddress)
                                </div>
                            </div>
                            <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                <label class="col-lg-2 form-control-label">Phone Number</label>
                                <div class="col-lg-8">
                                    <div>
                                        @Html.TextBoxFor(model => model.MS_InstPhone, new { @class = "form-control" ,@required="required"})
                                    </div>
                                    @Html.ValidationMessageFor(model => model.MS_InstPhone)
                                </div>
                            </div>
                            <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                <label class="col-lg-2 form-control-label">Branch Name</label>
                                <div class="col-lg-8">
                                    <div>
                                        @Html.TextBoxFor(model => model.MS_InstBranch, new { @class = "form-control", @required="required"})
                                    </div>
                                    @Html.ValidationMessageFor(model => model.MS_InstBranch)

                                </div>
                            </div>
                           
                            <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                <label class="col-lg-2 form-control-label">Upload Logo</label>
                                <input type="file" name="img" />
                            </div>
                            <div class="button text-center">
                                <input type="submit" class="btn btn-lg btn-gradient-03" value="Next">
                            </div>
                        </form>
                        }
                    </div>
                </div>
                <!-- End Form -->

            </div>
        </div>




    </div>



















    <script src="~/Content/assets/vendors/js/base/jquery.min.js"></script>
    <script src="~/Content/assets/vendors/js/base/core.min.js"></script>
    <!-- End Vendor Js -->
    <!-- Begin Page Vendor Js -->
    <script src="~/Content/assets/vendors/js/app/app.min.js"></script>
</body>

</html>
