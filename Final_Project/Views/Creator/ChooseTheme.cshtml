@model Final_Project.Models.theme
@{
    List<string> themelist = new List<string>()
{
"Dark",
"Light",
};
}

<!DOCTYPE html>


<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Elisyam - Coming Soon</title>
    <meta name="description" content="Elisyam is a Web App and Admin Dashboard Template built with Bootstrap 4">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Google Fonts -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Montserrat:400,500,600,700", "Noto+Sans:400,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="assets/img/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="assets/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="assets/img/favicon-16x16.png">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="~/Content/assets/vendors/css/base/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets/vendors/css/base/elisyam-1.2.min.css">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body class="bg-fixed-07">
    <!-- Begin Preloader -->
    <div id="preloader">
        <div class="canvas">
            <img src="~/Content/assets/img/logo.png" alt="logo" class="loader-logo">
            <div class="spinner"></div>
        </div>
    </div>
    <!-- End Preloader -->
    <!-- Begin Container -->
    <div class="container-fluid h-100 overflow-y ">
        <!-- Form -->
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(false)
            <div class="content-inner">
                <div class="container-fluid">
                    <div class="row flex-row h-100">
                        <div class="col-12 my-auto">
                            <!-- Begin Widget Body -->
                            <div class="widget-body" style="padding:100px 0;">
                                <div class="pricing-tables-fixed">
                                    <div class="row">
                                        <div class="col-lg-4 no-padding">
                                            <div class="pricing-tables-02 pricing-wrapper">
                                                <div class="inner-container">
                                                    <div class="title">Light</div>
                                                    <div class="pricing-image">
                                                        <img src="~/Content/assets/img/icone-01.png" alt="...">
                                                    </div>
                                                    <div class="pricing-list">
                                                        <ul>
                                                            <li><i class="ion-checkmark margin-right-15"></i>low Contrast Colours</li>
                                                            <li><i class="ion-checkmark margin-right-15"></i>Feasible for use in workspace</li>
                                                            <li><i class="ion-checkmark margin-right-15"></i>Best in daylight</li>
                                                            <li><i class="ion-checkmark margin-right-15"></i>Default</li>
                                                        </ul>
                                                    </div>

                                                </div>

                                                Light
                                                @Html.RadioButtonFor(model => model.theme1, "light")
                                                @Html.ValidationMessageFor(model => model.theme1)

                                            </div>

                                        </div>

                                        <div class="col-lg-4 no-padding">
                                            <div class="pricing-tables-02 dark pricing-wrapper">
                                                <div class="inner-container">
                                                    <div class="title">Dark</div>
                                                    <div class="pricing-image">
                                                        <img src="~/Content/assets/img/icone-03-white.png" alt="...">
                                                    </div>
                                                    <div class="pricing-list">
                                                        <ul>
                                                            <li><i class="ion-checkmark margin-right-15"></i>feasible for use in low-light environment</li>
                                                            <li><i class="ion-checkmark margin-right-15"></i>Reduced power usage</li>
                                                            <li><i class="ion-checkmark margin-right-15"></i>Good visibility for low vision users</li>
                                                            <li><i class="ion-checkmark margin-right-15"></i>For users sensitive to bright light</li>
                                                        </ul>
                                                    </div>

                                                </div>
                                                <div>
                                                    Dark
                                                    @Html.RadioButtonFor(model => model.theme1, "dark")
                                                    @Html.ValidationMessageFor(model => model.theme1)
                                                </div>
                                            </div>
                                            
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <!-- End Widget Body -->
                            <!-- End Coming Soon -->
                            <div class="sign-btn text-center ">
                                <input type="submit" value="Apply Theme" class="btn btn-lg btn-gradient-06" />
                            </div>

                        </div>
                        <!-- End Col -->
                       
                    </div>
                    <!-- End Row -->
                    

                </div>
            </div>
        }
    </div>
    <!-- End Container -->
    <!-- Begin Vendor Js -->
    <script src="~/Content/assets/vendors/js/base/jquery.min.js"></script>
    <script src="~/Content/assets/vendors/js/base/core.min.js"></script>
    <!-- End Vendor Js -->
    <!-- Begin Page Vendor Js -->
    <script src="~/Content/assets/vendors/js/nicescroll/nicescroll.min.js"></script>
    <script src="~/Content/assets/vendors/js/countdown/countdown.min.js"></script>
    <script src="~/Content/assets/vendors/js/app/app.min.js"></script>
    <!-- End Page Vendor Js -->
    <!-- Begin Page Snippets -->
    <script src="~/Content/assets/js/pages/coming-soon.min.js"></script>
    <!-- End Page Snippets -->
</body>
</html>
