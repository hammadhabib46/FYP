
@model Final_Project.Models.Rolevalues
@{
    bool hr = false;
    bool teacher = false;
    bool acc = false;
    Layout = null;
    List<string> rols=(List<string>)Session["roles"];

    foreach (string st in rols)
    {
        if (st == "HR")
        { hr = true; }

        if (st == "Accountant")
        { acc = true; }

        if (st == "Teacher")
        { teacher = true; }

    }

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Elisyam - Confirm Email</title>
    <meta name="description" content="Elisyam is a Web App and Admin Dashboard Template built with Bootstrap 4">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Google Fonts -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Montserrat:400,500,600,700", "Noto+Sans:400,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/Content/assets/img/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/assets/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/assets/img/favicon-16x16.png">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="~/Content/assets/vendors/css/base/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets/vendors/css/base/elisyam-1.2.min.css">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body class="bg-fixed-07">
    <!-- Begin Preloader -->
    <div id="preloader">
        <div class="canvas">
            <img src="~/Content/assets/img/logo.png" alt="logo" class="loader-logo">
            <div class="spinner"></div>
        </div>
    </div>

    <div class="container-fluid h-100 overflow-y">
        <div class="row flex-row h-100">
            <div class="col-12 my-auto">
                <!-- Form -->
                @using (Html.BeginForm("missingRoles", "Creator"))
                {
                    <div class="widget has-shadow mx-auto" style="width: 900px;">

                        <div class="widget-header bordered no-actions d-flex align-items-center justify-content-md-center">
                            <h4>Add new roles of your System</h4>
                        </div>
                        <div class="widget-body ">
                            <form class="form-horizontal ">
                                <div class="styled-checkbox">
                                    <input type="checkbox" name="AccountManager" value="true" id="remeberAccountantui" checked="checked" class="form-control" disabled>
                                    <label for="remeberAccountanttt">Admin</label>
                                </div>
                                
                                <div class="styled-checkbox">
                                            <input type="checkbox" name="AccountManager" value="true" id="remeberAccountanttu" checked="checked" class="form-control"disabled>
                                            <label for="remeberAccountantttttt">Student</label>
                                </div>
                                @{ if (acc == true)
                                    {
                                        <div class="styled-checkbox">
                                            <input type="checkbox" name="AccountManager" value="true" id="remeberAccountant" class="form-control">
                                            <label for="remeberAccountant">Account Manager</label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="styled-checkbox">
                                            <input type="checkbox" name="AccountManager" value="true" id="remeberAccountant" class="form-control" checked="checked" disabled>
                                            <label for="remeberAccountantt">Account Manager</label>
                                        </div>
                                    }
                                    if (hr == true)
                                    {
                                        <div class="styled-checkbox">
                                            <input type="checkbox" name="HRmanager" value="true" id="managerHR" class="form-control">
                                            <label for="managerHR">HR Manager</label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="styled-checkbox">
                                            <input type="checkbox" name="HRmanager" value="true" id="managerHR" class="form-control" checked="checked" disabled>
                                            <label for="managerHRR">HR Manager</label>
                                        </div>
                                    }
                                    if (teacher == true)
                                    {
                                        <div class="styled-checkbox">
                                            <input type="checkbox" name="Teacher" value="true" id="rememberTeacher" class="form-control">
                                            <label for="rememberTeacher">Teacher</label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="styled-checkbox">
                                            <input type="checkbox" name="Teacher" value="true" id="rememberTeacher" class="form-control" checked="checked" disabled>
                                            <label for="rememberTeacher">Teacher</label>
                                        </div>
                                    }
                                }


                                <div class="sign-btn text-center">
                                    <br>
                                    <br>
                                    <input type="submit" value="Next" class="btn" />


                                </div>

                            </form>

                        </div>
                    </div>
                }
            </div>

            <!-- End Form -->
        </div>
    </div>






    <script src="~/Content/assets/vendors/js/base/jquery.min.js"></script>
    <script src="~/Content/assets/vendors/js/base/core.min.js"></script>
    <!-- End Vendor Js -->
    <!-- Begin Page Vendor Js -->
    <script src="~/Content/assets/vendors/js/app/app.min.js"></script>
</body>

</html>