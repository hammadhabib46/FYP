@model Final_Project.Models.@class
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Elisyam - Confirm Email</title>
    <meta name="description" content="Elisyam is a Web App and Admin Dashboard Template built with Bootstrap 4">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Google Fonts -->
    <script src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"></script>
    <script>
        WebFont.load({
            google: { "families": ["Montserrat:400,500,600,700", "Noto+Sans:400,700"] },
            active: function () {
                sessionStorage.fonts = true;
            }
        });
    </script>
    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/Content/assets/img/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/Content/assets/img/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/assets/img/favicon-16x16.png">
    <!-- Stylesheet -->
    <link rel="stylesheet" href="~/Content/assets/vendors/css/base/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/assets/vendors/css/base/elisyam-1.2.min.css">
    <!-- Tweaks for older IEs-->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script><![endif]-->
</head>
<body class="bg-fixed-07">
    <!-- Begin Preloader -->
    <div id="preloader">
        <div class="canvas">
            <img src="~/Content/assets/img/logo.png" alt="logo" class="loader-logo">
            <div class="spinner"></div>
        </div>
    </div>

    <div class="container-fluid h-100 overflow-y">
        <div class="row flex-row h-100">
            <div class="col-12 my-auto">
                <!-- Form -->
                @using (Html.BeginForm("ManageClass", "Creator", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.ValidationSummary(true)
                    <div class="widget has-shadow mx-auto" style="width: 900px;">
                        <div class="widget-header bordered no-actions d-flex align-items-center justify-content-md-center">
                            <h4>Class </h4>
                        </div>
                        <div class="widget-body ">
                            <form class="form-horizontal ">
                                <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                    <label class="col-lg-2 form-control-label">Class Name</label>
                                    <div class="col-lg-8">
                                        <div>
                                            <input type="text" class="form-control" name="ClassName" required>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Class_Name)
                                    </div>
                                </div>
                                <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                    <label class="col-lg-2 form-control-label">Class Fee</label>
                                    <div class="col-lg-8">
                                        <div>
                                            <input type="number" min="20" max="99999"  class="form-control" name="Fee" required >
                                        </div>
                                       
                                    </div>
                                </div>
                                <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                    <label class="col-lg-2 form-control-label">Subjects</label>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control" name="Subjects">
                                    </div>
                                </div>
                                <div class="form-group row d-flex align-items-center mb-12 justify-content-md-center">

                                    <div class="col-sm-2">
                                        <input type="submit" value="+ Add" class="btn btn-lg btn-gradient-03" />

                                    </div>
                                    <div class="col-sm-2">
                                        <p class="btn btn-sm btn-gradient-03">@Html.ActionLink("Next", "ManageRoles", "Creator")</p>
                                    </div>
                                </div>
                            </form>
                        </div>

                    </div>
                    <!-- End Form -->
                }
            </div>
        </div>

    </div>



    <script src="~/Content/assets/vendors/js/base/jquery.min.js"></script>
    <script src="~/Content/assets/vendors/js/base/core.min.js"></script>
    <!-- End Vendor Js -->
    <!-- Begin Page Vendor Js -->
    <script src="~/Content/assets/vendors/js/app/app.min.js"></script>
</body>

</html>