

@{
    ViewBag.Title = "UpdateHR";
    Layout = "~/Views/Shared/_adminLayout.cshtml";

    TempData["EMAIL_A"] = 1;
    TempData["DOB_A"] = 1;
    TempData["CNIC_A"] = 1;
    TempData["ADDRESS_A"] = 1;
}

<h2>Update HR </h2>

<div class="container-fluid h-100 overflow-y">
    <div class="row flex-row h-100">
        <div class="col-12 my-auto">
            <!-- Form -->
            <div class="widget has-shadow mx-auto" style="width: 900px;">
                <div class="widget-header bordered no-actions d-flex align-items-center justify-content-md-center">
                    <h4>Fill information of new HR</h4>
                </div>
                <div class="widget-body ">
                    <form class="form-horizontal ">
                        <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                            <label class="col-lg-2 form-control-label">Name</label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        @{
                            if ((int)TempData["EMAIL_A"] == 1)
                            {
                                <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                    <label class="col-lg-2 form-control-label">Email</label>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                            }



                            <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                <label class="col-lg-2 form-control-label">Username</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control">
                                </div>
                            </div>

                            <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                <label class="col-lg-2 form-control-label">Gender</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            if ((int)TempData["DOB_A"] == 1)
                            {
                                <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                    <label class="col-lg-2 form-control-label">Date of birth</label>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                            }
                            if ((int)TempData["CNIC_A"] == 1)
                            {
                                <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                    <label class="col-lg-2 form-control-label">CNIC</label>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                            }
                            <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                <label class="col-lg-2 form-control-label">Phone no</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            if ((int)TempData["ADDRESS_A"] == 1)
                            {
                                <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                    <label class="col-lg-2 form-control-label">Address</label>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                            }
                        }
                        <div class="sign-btn text-center ">
                            <input type="submit" value="Update HR" class="btn btn-lg btn-gradient-01" />
                        </div>
                    </form>
                </div>
            </div>
            <!-- End Form -->
        </div>
    </div>




</div>
