@using Final_Project.Models;
@model Final_Project.Models.teacherSaverCheck
@{
    ViewBag.Title = "Notification";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    var classData = (List<@class>)Session["clz"];
    int i = 0;

   
}
<h1 class="text-center">Send Notification To Student </h1>

@using (Html.BeginForm("Notification", "Admin", FormMethod.Post))
{
    <form>
    @Html.ValidationSummary(false)
        <div class="container-fluid h-100 overflow-y">
            <div class="row ">
                <div class="col-2 my-auto">
                    <!-- Form -->
                    <div class="widget has-shadow mx-auto ">
                        <div class="widget-body ">
                            <h2 class="text-center">Classes </h2>
                            @{
                                foreach (@class x in classData)
                                {
                                    @Html.HiddenFor(model => model.checklist[i].checkid, x.Class_ID)
                                    @Html.CheckBoxFor(model => model.checklist[i].checkvalue, new { @class = "styled-checkbox" })
                                    @Html.LabelFor(model => model.checklist[i].checkid, x.Class_Name)
                                    <br/>
                                    i = i + 1;
                                }

                            }
                           
                        </div>
                    </div>
                </div>

                <div class="col-8 my-auto">

                    <div class="widget has-shadow ">
                        <div class="widget-body ">
                            <div class="form-group row d-flex align-items-center ">
                                <label class="col-lg-12 form-control-label d-flex justify-content-lg-end">Custom Message</label>
                                <div class="col-lg-12">
                                    <textarea class="form-control" name="notification_text" placeholder="Type your message here ..." required></textarea>
                                    <div class="invalid-feedback">
                                        Please enter a custom message
                                    </div>
                                </div>
                            </div>

                            <div class="sign-btn text-center">
                                <input type="submit" value="Send" class="btn btn-lg btn-gradient-01 " />
                            </div>

                            @{ if (ViewBag.noti_S == null)
                                {
                                    <p></p>
                                }
                                else 
                                {
                                    <div class="alert alert-success">
                                        <strong> @ViewBag.noti_S</strong>.
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
}