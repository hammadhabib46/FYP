

@{
    
    ViewBag.Title = "UpdateStudent";
  Layout = "~/Views/Shared/_adminLayout.cshtml";
    TempData["DOB_A"] = 1;
    TempData["CNIC_A"] = 0;
    TempData["G_NAME_A"] = 1;
    TempData["G_CNIC_A"] = 0;
    TempData["G_ADDRESS"] = 0;
    TempData["G_CONTACT"] = 1;
}

<h2>UpdateStudent</h2>

<div class="container-fluid h-100 overflow-y">
    <div class="row flex-row h-100">
        <div class="col-12 my-auto">
            <!-- Form -->
            <div class="widget has-shadow mx-auto" style="width: 900px;">
                <div class="widget-header bordered no-actions d-flex align-items-center justify-content-md-center">
                    <h4>Update student information</h4>
                </div>
                <div class="widget-body ">
                    <form class="form-horizontal ">
                        <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                            <label class="col-lg-2 form-control-label">First Name</label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                            <label class="col-lg-2 form-control-label">Last Name</label>
                            <div class="col-lg-8">
                                <input type="text" class="form-control">
                            </div>
                        </div>
                        @{

                            if ((int)TempData["DOB_A"] == 1)
                            {
                                <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                    <label class="col-lg-2 form-control-label">Date of Birth</label>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                            }

                            if ((int)TempData["CNIC_A"] == 1)
                            {
                                <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                    <label class="col-lg-2 form-control-label">CNIC</label>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                            }
                            <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                <label class="col-lg-2 form-control-label">Phone Number</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                <label class="col-lg-2 form-control-label">Address</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                <label class="col-lg-2 form-control-label">Class</label>
                                <div class="col-lg-8">
                                    <input type="text" class="form-control">
                                </div>
                            </div>
                            if ((int)TempData["G_NAME_A"] == 1)
                            {
                                <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                    <label class="col-lg-2 form-control-label">Guardian Name</label>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                            }
                            if ((int)TempData["G_CNIC_A"] == 1)
                            {
                                <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                    <label class="col-lg-2 form-control-label">Guardian CNIC</label>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                            }
                            if ((int)TempData["G_ADDRESS"] == 1)
                            {
                                <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                    <label class="col-lg-2 form-control-label">Guardian Address</label>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control">
                                    </div>

                                </div>
                            }
                            if ((int)TempData["G_CONTACT"] == 1)
                            {
                                <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                                    <label class="col-lg-2 form-control-label">Guardian Contact Number</label>
                                    <div class="col-lg-8">
                                        <input type="text" class="form-control">
                                    </div>
                                </div>
                            }
                        }

                        <div class="sign-btn text-center ">
                            <input type="submit" value="Delete Student" class="btn btn-lg btn-gradient-01" />
                        </div>

                    </form>
                </div>
            </div>
            <!-- End Form -->
        </div>
    </div>




</div>
