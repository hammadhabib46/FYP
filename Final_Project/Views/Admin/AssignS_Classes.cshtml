@using Final_Project.Models;
@{
    ViewBag.Title = "AssignS_Classes";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
    var classData = (List<@class>)Session["clz"];
}



<div class="col-xl-6">
    <!-- Block Buttons -->
    <div class="widget has-shadow">
        <div class="widget-header bordered no-actions d-flex align-items-center">
            <h4>Assigning Subjects</h4>
        </div>
        @foreach (@class clas in classData)
        {
            int claid = clas.Class_ID;

            <div class="widget-body">
                <div class="row">
                    <div class="col-xl-6 center">
                        <button class="btn btn-primary btn-square mb-2" type="button" onclick="location.href='@Url.Action("AssignS_Subjects", "Admin", new { c_id = claid})'">@clas.Class_Name </button>
                    </div>
                </div>
            </div>
        }

        <!-- End Block Buttons -->
    </div>
