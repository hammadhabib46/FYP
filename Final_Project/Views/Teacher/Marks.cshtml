@using Final_Project.Models;
@model Final_Project.Models.marksHelper
@{
    ViewBag.Title = "Marks";
    Layout = "~/Views/Shared/_teacherLayout.cshtml";
    List<markss> MrkStuData = (List<markss>)Session["studMarksdataa"];

    List<bool> boolist = new List<bool>();

    int i = 0;
    Session["gettotal"] = Session["mmttotl"];

}

<h2>@Session["MClassSub_Name"]</h2>

@{

    if ((Boolean)Session["Mrkmaintaintwoforms"] == false)
    {

        using (Html.BeginForm("Marks", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)

            <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                <label class="col-lg-2 form-control-label">Assessment Type</label>
                <div class="col-lg-8">
                    <input type="text" class="form-control" required="required" name="typeofmarks">
                </div>
            </div>

            <div class="form-group row d-flex align-items-center mb-5 justify-content-md-center">
                <label class="col-lg-2 form-control-label">Date:</label>
                <div class="col-lg-8">
                    <input type="date" class="form-control" required="required" name="dateofAssesmnt">
                </div>
            </div>
            <div class="sign-btn text-center ">
                <input type="submit" value="View Marks Sheet" class="btn btn-lg btn-gradient-03" />
            </div>
        }

    }

    if ((Boolean)Session["Mrkmaintaintwoforms"] == true)
    {
        using (Html.BeginForm("Marks", "Teacher", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            <div class="widget has-shadow">
                @{
                    <div class="widget-header bordered no-actions d-flex align-items-center">
                        <h4>@Session["MClassSub_Name"]</h4>
                    </div>

                    if (MrkStuData == null)
                    {
                        <div class="widget-header bordered no-actions d-flex align-items-center">
                            <h4>Class is Empty</h4>
                        </div>
                    }
                    else
                    {
                        <div class="form-control">
                            <label class="col-lg-8 form-control-label">Total Marks</label>
                            <input type="text" required="required" name="totalMs" value=@Session["gettotal"]>
                        </div>


                        <div class="widget-body">
                            <div class="table-responsive">
                                <table class="table table-bordered mb-0">
                                    <thead>
                                        <tr>
                                            <th>Roll Number</th>
                                            <th>Student Name</th>
                                            <th>Obtained Marks</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            foreach (markss item in MrkStuData)
                                            {
                                                <tr>
                                                    <td>@item.Mstd_ID</td>
                                                    <td>@item.Mstd_NAME</td>
                                                    @{
                                                        if (item.Mstd_marks == null)
                                                        {
                                                            <td>
                                                                @Html.TextBoxFor(model => model.mrksList[i].obtainedMarks, new { @placeholder = "-" })

                                                            </td>
                                                        }
                                                        else
                                                        {

                                                            <td>

                                                                @Html.TextBoxFor(model => model.mrksList[i].obtainedMarks, new { @Value = item.Mstd_marks })
                                                            </td>

                                                        }
                                                    }
                                                </tr>
                                                i++;
                                            }

                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                }
            </div>

            <div class="sign-btn text-center ">
                <input type="submit" value="Update" class="btn btn-lg btn-gradient-03" />
            </div>

        }



    }


}

